<IfModule mod_rewrite.c>
    RewriteEngine On

    # If the file/directory exists, serve it directly (static files)
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Everything else goes through PHP reverse proxy to Node.js
    RewriteRule ^ index.php [L]
</IfModule>
